{
    "name": "future_wave_backend",
    "version": "1.0.0",
    "description": "Mongoose Node.js Express TypeScript application boilerplate with best practices for API development.",
    "author": "Willer Santos",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "watch-build": "tsc -w",
        "start": "npm run build && node dist/shared/server.js",
        "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/shared/server.ts",
        "server": "concurrently \"npm run watch-build\" \"npm run watch-deploy\"",
        "lint": "npx eslint .",
        "lint:fix": "npx eslint . --fix"
    },
    "dependencies": {
        "config": "^3.3.8",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-validator": "^6.14.2",
        "http-status-codes": "^2.2.0",
        "mongoose": "^6.6.5",
        "request": "^2.88.2",
        "typescript": "^4.8.4"
    },
    "devDependencies": {
        "@types/config": "3.3.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.14",
        "@types/mongoose": "^5.11.97",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "concurrently": "^7.4.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.8",
        "ts-node-dev": "^2.0.0"
    }
}
